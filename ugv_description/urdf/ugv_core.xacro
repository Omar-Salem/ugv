<?xml version="1.0" ?>
<robot name="ugv" xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="$(find ugv_description)/urdf/materials.xacro"/>
    <xacro:property name="base_link_mass" value="2"/>
    <xacro:property name="wheel_mass" value="0.0956"/>
    <xacro:property name="wheel_radius" value="0.04"/>
    <xacro:property name="wheel_height" value="0.04"/>
    
    <xacro:macro name="box_inertia" params="m x y z">
        <inertia  ixx="${m*(y*y+z*z)/12}" ixy = "0" ixz = "0"
                  iyy="${m*(x*x+z*z)/12}" iyz = "0"
                  izz="${m*(x*x+z*z)/12}" /> 
    </xacro:macro>

    <xacro:macro name="cylinder_inertia" params="m r h">
      <inertia  ixx="${m*(3*r*r+h*h)/12}" ixy = "0" ixz = "0"
                  iyy="${m*(3*r*r+h*h)/12}" iyz = "0"
                  izz="${m*r*r/2}" /> 
      </xacro:macro>


    <link name="base_link">
        <inertial>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <mass value="${base_link_mass}"/>
            <xacro:box_inertia m="${base_link_mass}" x=".38" y=".24" z=".18" />
        </inertial>
        <visual>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find ugv_description)/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <collision>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find ugv_description)/meshes/base_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <link name="front_left_wheel">
        <inertial>
            <origin xyz="0.0 0.020000000000000018 -6.938893903907228e-18" rpy="0 0 0"/>
            <mass value="${wheel_mass}"/>
            <xacro:cylinder_inertia m="${wheel_mass}" r="${wheel_radius}" h="${wheel_height}" />
        </inertial>
        <visual>
            <origin xyz="-0.13672 -0.122 -0.0409" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find ugv_description)/meshes/front_left_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <collision>
            <origin xyz="-0.13672 -0.122 -0.0409" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find ugv_description)/meshes/front_left_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <link name="rear_left_wheel">
        <inertial>
            <origin xyz="-2.7755575615628914e-17 0.020000000000000018 -6.938893903907228e-18" rpy="0 0 0"/>
            <mass value="${wheel_mass}"/>
            <xacro:cylinder_inertia m="${wheel_mass}" r="${wheel_radius}" h="${wheel_height}" />
        </inertial>
        <visual>
            <origin xyz="0.13672 -0.122 -0.0409" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find ugv_description)/meshes/rear_left_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <collision>
            <origin xyz="0.13672 -0.122 -0.0409" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find ugv_description)/meshes/rear_left_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <link name="rear_right_wheel">
        <inertial>
            <origin xyz="0.0 -0.020000000000000018 0.0" rpy="0 0 0"/>
            <mass value="${wheel_mass}"/>
           <xacro:cylinder_inertia m="${wheel_mass}" r="${wheel_radius}" h="${wheel_height}" />
        </inertial>
        <visual>
            <origin xyz="0.13672 0.122 -0.0409" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find ugv_description)/meshes/rear_right_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <collision>
            <origin xyz="0.13672 0.122 -0.0409" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find ugv_description)/meshes/rear_right_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <link name="front_right_wheel">
        <inertial>
            <origin xyz="0.0 -0.020000000000000018 0.0" rpy="0 0 0"/>
            <mass value="${wheel_mass}"/>
             <xacro:cylinder_inertia m="${wheel_mass}" r="${wheel_radius}" h="${wheel_height}" />
       </inertial>
        <visual>
            <origin xyz="-0.13672 0.122 -0.0409" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find ugv_description)/meshes/front_right_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <collision>
            <origin xyz="-0.13672 0.122 -0.0409" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find ugv_description)/meshes/front_right_wheel.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <link name="lidar_link">
        <inertial>
            <origin xyz="-0.027115069985041318 3.5226945429821856e-06 -0.0020552178870618665" rpy="0 0 0"/>
            <mass value="0.7886321015037847"/>
            <xacro:cylinder_inertia m="${wheel_mass}" r="${wheel_radius}" h="${wheel_height}" />
     </inertial>
        <visual>
            <origin xyz="-0.19 -0.0 -0.22" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find ugv_description)/meshes/lidar_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
            <material name="silver"/>
        </visual>
        <collision>
            <origin xyz="-0.19 -0.0 -0.22" rpy="0 0 0"/>
            <geometry>
                <mesh filename="file://$(find ugv_description)/meshes/lidar_link.stl" scale="0.001 0.001 0.001"/>
            </geometry>
        </collision>
    </link>

    <joint name="front_left_wheel_joint" type="continuous">
        <origin xyz="0.13672 0.122 0.0409" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="front_left_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="rear_left_wheel_joint" type="continuous">
        <origin xyz="-0.13672 0.122 0.0409" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="rear_left_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="rear_right_wheel_joint" type="continuous">
        <origin xyz="-0.13672 -0.122 0.0409" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="rear_right_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="front_right_wheel_joint" type="continuous">
        <origin xyz="0.13672 -0.122 0.0409" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="front_right_wheel"/>
        <axis xyz="0.0 1.0 0.0"/>
    </joint>

    <joint name="lidar_link_joint" type="fixed">
        <origin xyz="0.19 0.0 0.22" rpy="0 0 0"/>
        <parent link="base_link"/>
        <child link="lidar_link"/>
    </joint>

    <link name="base_footprint"/>

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 0"/>
    </joint>

</robot>
